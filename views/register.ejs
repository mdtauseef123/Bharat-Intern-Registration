<%- include("partials/header") -%>

<h1 style="text-align: center;" class="mt-3">Register User</h1>
<div class="card shadow border register-card">
    <div class="card-body">
      <h5 class="card-title">Register</h5>
      <form action="/register" method="post">
        <label>Enter Full Name</label>
        <input class="form-control" name="username" autocomplete="off" type="text" size="40">
        <label>Enter Email</label>
        <input class="form-control" name="useremail" autocomplete="off" type="email">
        <label>Enter Your Age</label>
        <input class="form-control" name="age" autocomplete="off" type="text">
        <label>Enter Your Gender</label>
        <input class="form-control" name="gender" autocomplete="off" type="text">
        <label>Enter Your Phone Number</label>
        <input class="form-control" name="phone" autocomplete="off" type="text">
        <br>
        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
        
      </form>
    </div>
</div>


<%- include("partials/footer") -%>